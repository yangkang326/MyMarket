<Window
    x:Class="MyMarket.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:MyMarket"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:MyMarket.ViewModel"
    x:Name="window"
    Title="MainWindow"
    Width="1600"
    Height="900"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ScrollViewer>
                <ItemsControl
                    x:Name="ListView"
                    ItemsSource="{Binding ProductsCollection}"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card
                                x:Name="outBorder"
                                Margin="5"
                                Background="GreenYellow">
                                <Grid Background="Transparent">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Border
                                        Margin="20"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding PDIcon}" />
                                        </Border.Background>
                                    </Border>
                                    <Button
                                        Margin="0,10,10,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Command="{Binding DataContext.AddToCratCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="Cart" />
                                    </Button>
                                    <StackPanel Grid.Row="1">
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            FontSize="24"
                                            Text="{Binding PDName}" />
                                        <TextBlock Margin="10,0,10,0" HorizontalAlignment="Right">
                                            <Run FontSize="24" Text="{Binding PDUnitPrice}" />
                                            <Run FontSize="20" Text="元/" /><Run FontSize="20" Text="{Binding PDUnit}" />
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel
                                Width="{Binding ActualWidth, ElementName=ListView}"
                                ItemHeight="300"
                                ItemWidth="250" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <Grid Name="DealDetial"  Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch"
                        FontSize="30"
                        TextAlignment="Center">
                        购物车
                    </TextBlock>
                    <StackPanel
                        Grid.Row="0"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <TextBlock
                            MinWidth="100"
                            Margin="5,0"
                            FontSize="24"
                            Text=""
                            TextAlignment="Center">
                            <Run Text="名称" />
                        </TextBlock>
                        <TextBlock
                            MinWidth="100"
                            Margin="5,0"
                            FontSize="24"
                            Text=""
                            TextAlignment="Center">
                            <Run Text="货号" />
                        </TextBlock>
                        <TextBlock
                            MinWidth="100"
                            Margin="5,0"
                            FontSize="24"
                            Text=""
                            TextAlignment="Center">
                            <Run Text="单价" />
                        </TextBlock>
                        <TextBlock
                            MinWidth="100"
                            Margin="5,0"
                            FontSize="24"
                            Text=""
                            TextAlignment="Center">
                            <Run Text="数量" />
                        </TextBlock>
                        <TextBlock
                            MinWidth="100"
                            Margin="5,0"
                            FontSize="24"
                            Text=""
                            TextAlignment="Center">
                            <Run Text="总价" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
                <ListView Grid.Row="1" ItemsSource="{Binding CartList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <ItemContainerTemplate>
                            <Border
                                Padding="2"
                                BorderBrush="Black"
                                BorderThickness="2"
                                CornerRadius="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        MinWidth="100"
                                        Margin="5,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding PDName}"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        MinWidth="100"
                                        Margin="5,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding PDSN}"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        MinWidth="100"
                                        Margin="5,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding UnitPrice, StringFormat=\{0:F2\}}"
                                        TextAlignment="Center" />
                                    <TextBox
                                        MinWidth="100"
                                        Margin="5,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding Count, Mode=TwoWay, StringFormat=\{0:F3\}, UpdateSourceTrigger=PropertyChanged}"
                                        TextAlignment="Center">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="TextChanged">
                                                <i:InvokeCommandAction Command="{Binding DataContext.PdContChangedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                    <TextBlock
                                        MinWidth="100"
                                        Margin="5,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding PDTotalPrice, StringFormat=\{0:F2\}}"
                                        TextAlignment="Center" />
                                    <Button
                                        Command="{Binding DataContext.DeleCartItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                        ToolTip="MaterialDesignFloatingActionMiniLightButton">
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="Delete" />
                                    </Button>
                                </StackPanel>
                            </Border>
                        </ItemContainerTemplate>
                    </ItemsControl.ItemTemplate>
                </ListView>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <materialDesign:PackIcon Kind="User" Height="100" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center"></materialDesign:PackIcon>
                    <TextBlock HorizontalAlignment="Center" Grid.Row="1">User1</TextBlock>
                </Grid>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="40" Text="总价：" />
                        <TextBlock FontSize="45" Text="{Binding TotalPrice, StringFormat=\{0:F2\}}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="40" Text="付款：" />
                        <TextBlock FontSize="45" Text="{Binding TotalPrice, StringFormat=\{0:F2\}}" />
                        <Button Margin="2" Command="{Binding PrintDealDetialCommand}" CommandParameter="{Binding ElementName=DealDetial, Mode=OneWay}">
                            <materialDesign:PackIcon Kind="CashCheck" />
                        </Button>
                        <Button Command="{Binding CloseWinCommand, Source={StaticResource ComCmd}}"  Margin="2" CommandParameter="{Binding ElementName=window, Mode=OneWay}">
                            <materialDesign:PackIcon Kind="Wechat" />
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="40" Text="找零：" />
                        <TextBlock FontSize="45" Text="{Binding TotalPrice, StringFormat=\{0:F2\}}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>