<Window
    x:Class="MyMarket.Pay.View.PayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MyMarket.Pay.ViewModel"
    Title="PayWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:PayViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1">总额：</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="1">现金：</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="1">找零：</TextBlock>
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Cursor="IBeam" />
        <TextBox
            Grid.Row="2"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Cursor="IBeam" />
        <TextBox
            Grid.Row="3"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Cursor="IBeam" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            Margin="2">
            1
        </Button>
        <Button
            Grid.Row="4"
            Grid.Column="2"
            Margin="2">
            2
        </Button>
        <Button
            Grid.Row="4"
            Grid.Column="3"
            Margin="2">
            3
        </Button>
        <Button
            Grid.Row="5"
            Grid.Column="1"
            Margin="2">
            4
        </Button>
        <Button
            Grid.Row="5"
            Grid.Column="2"
            Margin="2">
            5
        </Button>
        <Button
            Grid.Row="5"
            Grid.Column="3"
            Margin="2">
            6
        </Button>
        <Button
            Grid.Row="6"
            Grid.Column="1"
            Margin="2">
            7
        </Button>
        <Button
            Grid.Row="6"
            Grid.Column="2"
            Margin="2">
            8
        </Button>
        <Button
            Grid.Row="6"
            Grid.Column="3"
            Margin="2">
            9
        </Button>
        <Button
            Grid.Row="7"
            Grid.Column="1"
            Margin="2">
            0
        </Button>
        <Button
            Grid.Row="7"
            Grid.Column="2"
            Margin="2">
            00
        </Button>
        <Button
            Grid.Row="7"
            Grid.Column="3"
            Margin="2">
            .
        </Button>
        <Button
            Grid.Row="4"
            Grid.Column="4"
            Margin="2">
            10
        </Button>
        <Button
            Grid.Row="5"
            Grid.Column="4"
            Margin="2">
            20
        </Button>
        <Button
            Grid.Row="6"
            Grid.Column="4"
            Margin="2">
            50
        </Button>
        <Button
            Grid.Row="7"
            Grid.Column="4"
            Margin="2">
            100
        </Button>
        <Button
            Grid.Row="4"
            Grid.Column="5"
            Margin="2">
            CE
        </Button>
        <Button
            Grid.Row="5"
            Grid.RowSpan="3"
            Grid.Column="5"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            确定
        </Button>
    </Grid>
</Window>